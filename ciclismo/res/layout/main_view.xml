<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
              android:layout_margin="2dp"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:weightSum="1"
              android:background="@android:color/white"
              tools:context=".cyclist.master.CyclistMasterView" android:baselineAligned="true">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:layout_gravity="center">

        <TextView
                android:id="@+id/header"
                android:textSize="@dimen/header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|center_vertical"
                android:background="@drawable/uci"/>

    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:layout_marginBottom="20dp"
            android:weightSum="1"
            android:layout_marginTop="10dp">

        <Button android:id="@+id/CyclistButton"
            android:textSize="@dimen/lbl_button"
            android:layout_width="match_parent"
            android:textColor="@android:color/white"
            android:background="@drawable/cyclist"
            android:layout_height="fill_parent"
            android:text="@string/CyclistButton"
            android:clickable="true"/>

    </LinearLayout>

    <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

        <Button android:id="@+id/TeamButtom"
                android:layout_margin="2dp"
                android:textColor="@android:color/primary_text_dark"
                android:background="@drawable/cycling"
                android:textSize="@dimen/lbl_button"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:text="@string/TeamMaster"
                android:clickable="true"
                android:typeface="monospace"
                android:visibility="visible"/>

    </LinearLayout>

</LinearLayout>

